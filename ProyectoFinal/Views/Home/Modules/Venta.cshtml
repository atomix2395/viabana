@using ProyectoFinal.Models

@model ModuloVentas
@{
    ViewBag.Title = "Ventas";
}

<dl class="menulateral">
    @{ Html.RenderAction("Modulos", "Home"); }
</dl>

<div class="col-lg-10 informativo">
    <h2 class="estiloHelveticaTitulo">@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>

    <div>
        <button type="button" id="agregarVenta" class="btn ventaButton col-lg-offset-10" style="float:right" data-toggle="modal" data-target="#newVent">
            Agregar Venta
        </button>
    </div>

    <table class="table table-hover" style="top: 25px; position:relative;">
        <tr>
            <td><strong>Id de Venta</strong></td>
            <td><strong>Fecha de emision</strong></td>
            <td><strong>Total de venta</strong></td>
            <td></td>
            <td></td>
        </tr>

        @foreach (var Venta in Model.ListaVentas)
        {
            <tr>
                <td id="numero">@Venta.idVenta</td>
                <td>@Venta.fecha</td>
                <td>@Venta.totalVenta</td>
                <td><span id="okV" class="glyphicon glyphicon-pencil delbtn" data-toggle="modal" data-target="#editVent"></span></td>
                <td><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#deleteVent"></span></td>

            </tr>
        }

    </table>
    <div class="modal fade" id="newVent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:500px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div>
                        <span class="glyphicon glyphicon-user" style="margin-left: 0px; margin-top: 19px;position:absolute;"></span>
                        <h4 class="modal-title estiloHelvetica col-lg-5" id="myModalLabel" style="margin-left: 10px;">Nueva Venta</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="idV">Id de venta:</label>
                            <input class="form-control" type="text" style="width:300px !important" id="idV" />
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="fechaV">Fecha de venta:</label>
                            <input class="form-control" type="datetime" id="fechaV" />
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="totalV">Total de Venta:</label>
                            <input class="form-control" type="number" id="totalV" />
                        </div>

                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="descrpP:">Descripcion de los productos:</label>
                            <table class="table table-hover" style="top: 20px; position:relative;">
                                <tr>
                                    <td><strong>Id de Producto</strong></td>
                                    <td><strong>Descrpcion</strong></td>
                                    <td><strong>Precio</strong></td>
                                </tr>

                              

                            </table>
                        </div>

                        <div position:relative;">
                            <button type="button" class="btn proveedorButton" style="float:right; margin-left:10px;">
                                Cancelar
                            </button>
                        </div>
                        <div>
                            <button type="button" class="btn proveedorButton" style="float:right;" data-toggle="collapse">
                                Confirmar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="editVent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:500px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div>
                        <span class="glyphicon glyphicon-pencil" style="margin-left: 0px; margin-top: 19px;position:absolute;"></span>
                        <h4 class="modal-title estiloHelvetica col-lg-5" id="myModalLabel" style="margin-left: 10px;">Editar Venta</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="idV">Id de venta:</label>
                            <input class="form-control" type="text" style="width:300px !important" id="idV" />
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="fechaV">Fecha de venta:</label>
                            <input class="form-control" type="datetime" id="fechaV" />
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="totalV">Total de Venta:</label>
                            <input class="form-control" type="number" id="totalV" />
                        </div>

                        <div position:relative;">
                            <button type="button" class="btn proveedorButton" style="float:right; margin-left:10px;">
                                Cancelar
                            </button>
                        </div>
                        <div>
                            <button type="button" class="btn proveedorButton" style="float:right;">
                                Confirmar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteVent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:170px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <span class="glyphicon glyphicon-trash" style="margin-left: 0px; margin-top: 19px;position:absolute;"></span>
                    <h4 class="modal-title estiloHelvetica col-lg-5" id="myModalLabel" style="margin-left: 10px;">Eliminar Venta</h4>
                </div>
                <div class="modal-body">
                    <a class="estiloHelveticaForm">¿Está seguro de eliminar la venta?</a>
                    <div position:relative;">
                        <button type="button" class="btn proveedorButton" style="float:right; margin-left:10px;">
                            Cancelar
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn proveedorButton" style="float:right;">
                            Confirmar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>